	.ui.items
		.item#fantasy
			.image
				img(src='/images/game-proto.png')
			.content.middle.aligned
				.header Fantasy Gaming
				.description
					p Super Selector : Create fantasy dream teams than compete with other teams. 
					br
					p Player markets : Go long & short the points a player will score, a la the derivative market.
				.extra
					a(style="color:white",href="/game") Beta
		.item#prediction
			.content.middle.aligned
				.header Match Prediction
				.description
					p Predictive modelling : Create quant models that predict sports match results, team scores and individual scores. 
				.extra
					a.pulsate(href="/prediction") Live
			.image
				img(src='/images/prediction-proto.png')
		.item#auction
			.image
				img(src='/images/auction-proto.png')
			.content.middle.aligned
				.header Team Auction
				.description
					p Auction model : Create a model that will assist franchise teams bid in player auctions.
		.item#evaluation
			.content.middle.aligned
				.header Player Evaluation
				.description
					p Player Evaluation Matrix : Create Model for individual player statistics and behaviour.
				.extra
			.image
				img(src='/images/evaluation-proto.png')