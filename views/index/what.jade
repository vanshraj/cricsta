					.four.wide.column
						a(href="#prediction")
							h3.ui.center.aligned.icon.header
								i.bordered.orange.line.chart.icon
								|   Match Prediction Model
								.pulsate Live
					.four.wide.column
						a(href="#auction")
							h3.ui.center.aligned.icon.header
								i.bordered.orange.legal.icon
								|   Auction Model
								.wobble Available
					.four.wide.column
						a(href="#evaluation")
							h3.ui.center.aligned.icon.header
								i.bordered.orange.dashboard.icon
								|   Player Evaluation
				.ui.grid.centered.mobile.tablet.only
					.four.wide.column
						a(href="#fantasy")
							h5.ui.center.aligned.icon.header
								i.bordered.orange.game.icon
								|   Fantasy Gaming
								.wobble Beta
