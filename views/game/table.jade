extends ../layout

block content
	.ui.centered.grid.center.aligned
			.column.center.aligned
				h1 #{data.team1.name} Vs #{data.team2.name}
	if !user
		.ui.grid.tablet.computer.only
			.ui.container.eight.wide.centered.column.center.aligned
				.ui.warning.message
					i.close.icon
					.header
					| Please  
					span
						a(style="text-decoration:underline" href="/users/register") register
					|  or 
					span
						a(style="text-decoration:underline" href="/users/login") login
					|  to play the game.
				br
		.ui.mobile.only.grid.center.aligned
			.ui.container
				.ui.warning.message(style="font-size:12px")
					i.close.icon
					.header
					| Please  
					span
						a(style="text-decoration:underline" href="/users/register") register
					|  or 
					span
						a(style="text-decoration:underline" href="/users/login") login
					|  to play the game.
				br
	.ui.container
		.ui.equal.width.grid.stackable
			.column
				.ui.card.orange(style="width:100%")
					.content
						.left.floated.header Account Details
						.right.floated.author
							img.ui.avatar.image(src='/images/matt.jpg')
							|  Vanshaj Behl
						.left.floated.meta(style="clear:both;")
							span.category Virtual Money
						.description
							table.ui.very.basic.table
								tbody
									tr
										td Balance Points
										td(colspan="2") 1000 points
									tr
										td Stocks
										td(colspan="2") 150 points
									tr
										td Account Value
										td(colspan="2") 1150 points
									tr
										td.positive Profit/Loss
										td.positive(colspan="2") 15 points
				br
				table.ui.selectable.celled.table.orange.unstackable.structured.small
					thead
						tr
							th Team
							th Best  Scores Buyer
							th Best  Scores Seller
					tbody
						tr
							td
								img(src="/images/#{data.team1.name}.png" style="vertical-align:middle; max-width:35px")
								| &nbsp &nbsp #{data.team1.name}
							td #{Math.round(doc.team1.predScore*1.1* 100) / 100} runs
								.ui.button.green.mini.inverted.right.floated Buy
							td #{Math.round(doc.team1.predScore*0.9* 100) / 100} runs
								.ui.button.red.mini.inverted.right.floated Sell
					tbody
						tr
							td
								img(src="/images/#{data.team2.name}.png" style="vertical-align:middle; max-width:35px")
								| &nbsp &nbsp  #{data.team2.name}
							td #{Math.round(doc.team2.predScore*1.1* 100) / 100} runs
								.ui.button.green.mini.inverted.right.floated Buy
							td #{Math.round(doc.team2.predScore*0.9* 100) / 100} runs
								.ui.button.red.mini.inverted.right.floated Sell
			.column
				.ui.top.attached.pointing.menu.stackable
					a.item.menuTabs.active(data-tab='first') #{data.team1.name} Batsmen
					a.item.menuTabs(data-tab='second') #{data.team2.name} Batsmen
					a.item.menuTabs(data-tab='third') #{data.team1.name} Bowlers
					a.item.menuTabs(data-tab='fourth') #{data.team2.name} Bowlers
				.ui.bottom.attached.tab.segment.active(data-tab='first')
					table.ui.selectable.celled.table.orange.unstackable.structured.small
						thead
							tr
								th Batsmen
								th Best Runs Buyer 
								th Best Runs Seller
						tbody
							if data.team1.batsmen
								each batsmen, i in data.team1.batsmen
									tr
										td
											img(src="/images/#{data.team1.name}.png" style="vertical-align:middle; max-width:35px")
											| &nbsp &nbsp #{batsmen.name}
											img(src="/images/bat.png" style="float:right; max-width:35px")
										td 
											| #{Math.round(batsmen.runsScored*1.1* 100) / 100} runs
											.ui.button.green.mini.inverted.right.floated Buy
										td #{Math.round(batsmen.runsScored*0.9*100) / 100} runs
											.ui.button.red.mini.inverted.right.floated Sell
				.ui.bottom.attached.tab.segment(data-tab='second')
					table.ui.selectable.celled.table.orange.unstackable.structured.small
						thead
							tr
								th Batsmen
								th Best Runs Buyer 
								th Best Runs Seller 
						tbody
							if data.team2.batsmen
								each batsmen, i in data.team2.batsmen
									tr
										td
											img(src="/images/#{data.team2.name}.png" style="vertical-align:middle; max-width:35px")
											| &nbsp &nbsp #{batsmen.name}
											img(src="/images/bat.png" style="float:right; max-width:35px")
										td #{Math.round(batsmen.runsScored*1.1* 100) / 100} runs
											.ui.button.green.mini.inverted.right.floated Buy
										td #{Math.round(batsmen.runsScored*0.9* 100) / 100} runs
											.ui.button.red.mini.inverted.right.floated Sell
				.ui.bottom.attached.tab.segment(data-tab='third')
					table.ui.selectable.celled.table.orange.unstackable.structured.small
						thead
							tr
								th Bowlers
								th Best  Wickets Buyer
								th Best  Wickets Seller
						tbody
							if data.team1.bowlers
								each bowler, i in data.team1.bowlers
									tr
										td
											img(src="/images/#{data.team1.name}.png" style="vertical-align:middle; max-width:35px")
											| &nbsp &nbsp #{bowler.name}
											img(src="/images/ball.png" style="float:right; margin-top:10px; max-width:15px")
										td #{Math.round(bowler.wicketsTaken*1.1* 100) / 100} wickets
											.ui.button.green.mini.inverted.right.floated Buy
										td #{Math.round(bowler.wicketsTaken*0.9* 100) / 100} wickets
											.ui.button.red.mini.inverted.right.floated Sell
				.ui.bottom.attached.tab.segment(data-tab='fourth')
					table.ui.selectable.celled.table.orange.unstackable.structured.small
						thead
							tr
								th Bowlers
								th Best  Wickets Buyer
								th Best  Wickets Seller
						tbody
							if data.team2.bowlers
								each bowler, i in data.team2.bowlers
									tr
										td
											img(src="/images/#{data.team2.name}.png" style="vertical-align:middle; max-width:35px")
											| &nbsp &nbsp #{bowler.name}
											img(src="/images/ball.png" style="float:right; margin-top:10px; max-width:15px")
											| &nbsp &nbsp
										td #{Math.round(bowler.wicketsTaken*1.1* 100) / 100} wickets
											.ui.button.green.mini.inverted.right.floated Buy
										td #{Math.round(bowler.wicketsTaken*0.9* 100) / 100} wickets
											.ui.button.red.mini.inverted.right.floated Sell